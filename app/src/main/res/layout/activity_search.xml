<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity"
    style="@style/background_activity_other_color_style">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_marginTop="@dimen/size_4_dp"
        android:layout_marginStart="@dimen/size_4_dp"
        android:id="@+id/arrow_back_search"
        style="@style/header_settings_screen_style_block"
        app:title="@string/button_text_search"
        app:titleTextAppearance="@style/material_header_style"
        app:navigationIcon="@drawable/ic_arrow_back_16">
    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_16_dp">
        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16_dp"
            android:layout_marginTop="@dimen/size_8_dp"
            android:layout_marginEnd="@dimen/size_16_dp"
            android:layout_marginBottom="@dimen/size_8_dp"
            android:background="@drawable/rounded_search_states"
            android:drawableStart="@drawable/ic_search_16"
            android:drawablePadding="@dimen/size_8_dp"
            android:hint="@string/button_text_search"
            android:inputType="text"
            android:paddingHorizontal="@dimen/size_12_dp"
            android:paddingVertical="@dimen/size_8_dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@color/yp_black"
            android:maxLines="1"
            android:maxLength="20"
            android:imeOptions="actionDone"
            android:singleLine="true"
            style="@style/color_style_search_edit_text" />
        <ImageView
            android:id="@+id/clear_icon"
            android:layout_gravity="end|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_28_dp"
            android:src="@drawable/ic_clear_edit_text_field_12"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/track_item" />
</LinearLayout>