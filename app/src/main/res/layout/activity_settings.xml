<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4_dp"
        android:layout_marginStart="@dimen/size_4_dp">
        <Button
            android:id="@+id/arrow_back"
            android:layout_width="@dimen/size_48_dp"
            android:layout_height="@dimen/size_48_dp"
            android:backgroundTint="@color/white"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/size_4_dp"
            app:icon="@drawable/arrow_back"
            app:iconTint="@color/black_title_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/size_zero_dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_settings"
                android:textSize="@dimen/size_22_sp"
                android:textColor="@color/black_title_settings"
                android:layout_marginTop="@dimen/size_10_dp"
                android:layout_marginStart="@dimen/size_12_dp"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24_dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_21_dp"
            android:layout_marginBottom="@dimen/size_21_dp"
            android:layout_marginStart="@dimen/size_16_dp"
            android:layout_marginEnd="@dimen/size_44_dp"
            android:text="@string/dark_theme_text"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16_sp"/>
        <Switch
            android:layout_width="@dimen/size_56_dp"
            android:layout_height="@dimen/size_40_dp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/size_10_dp"
            android:layout_marginEnd="@dimen/size_6_dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_21_dp"
            android:layout_marginBottom="@dimen/size_21_dp"
            android:layout_marginStart="@dimen/size_16_dp"
            android:text="@string/share_text"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16_sp"
            android:layout_gravity="start"/>
        <ImageView
            android:layout_width="@dimen/size_24_dp"
            android:layout_height="@dimen/size_24_dp"
            android:layout_marginTop="@dimen/size_19_dp"
            android:layout_marginEnd="@dimen/size_12_dp"
            android:src="@drawable/ethernet"
            android:layout_gravity="end"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_21_dp"
            android:layout_marginBottom="@dimen/size_21_dp"
            android:layout_marginStart="@dimen/size_16_dp"
            android:layout_marginEnd="@dimen/size_44_dp"
            android:text="@string/call_center_text"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16_sp"/>
        <ImageView
            android:layout_width="@dimen/size_24_dp"
            android:layout_height="@dimen/size_24_dp"
            android:layout_marginTop="@dimen/size_19_dp"
            android:layout_marginEnd="@dimen/size_12_dp"
            android:src="@drawable/call_center"
            android:layout_gravity="end"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_21_dp"
            android:layout_marginBottom="@dimen/size_21_dp"
            android:layout_marginStart="@dimen/size_16_dp"
            android:layout_marginEnd="@dimen/size_44_dp"
            android:text="@string/user_agreement_text"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16_sp"/>
        <ImageView
            android:layout_width="@dimen/size_24_dp"
            android:layout_height="@dimen/size_24_dp"
            android:layout_marginTop="@dimen/size_19_dp"
            android:layout_marginEnd="@dimen/size_12_dp"
            android:src="@drawable/arrow_forward"
            android:layout_gravity="end"/>
    </FrameLayout>
</LinearLayout>