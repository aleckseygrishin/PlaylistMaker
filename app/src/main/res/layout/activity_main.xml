<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_first_screen"
    android:padding="@dimen/size_16_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_40_dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_name"
            android:textSize="@dimen/size_22_sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <Button
        android:id="@+id/search_button_main_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_zero_dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"
        android:text="@string/button_text_search"
        android:textColor="@color/black"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerRadius="@dimen/size_16_dp"
        app:icon="@drawable/magnifier"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        />

    <Button
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_zero_dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"
        android:text="@string/button_text_media"
        android:textColor="@color/black"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerRadius="@dimen/size_16_dp"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        />
    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_zero_dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="@dimen/size_12_dp"
        android:text="@string/text_settings"
        android:textColor="@color/black"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerRadius="@dimen/size_16_dp"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        />
</LinearLayout>