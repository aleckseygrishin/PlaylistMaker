<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header_main_screen">
        <item name="android:textSize">@dimen/size_24_sp</item>
    </style>
    <style name="material_header_style">
        <item name="android:textSize">@dimen/size_24_sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="buttons_main_activity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_zero_dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/size_20_sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/size_16_dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
    </style>
    <style name="match_wrap_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="header_settings_screen_style_block" parent="match_wrap_content">
        <item name="navigationIconTint">@color/yp_black</item>
    </style>
    <style name="material_text_settings_activity" parent="match_wrap_content">
        <item name="android:paddingHorizontal">@dimen/size_16_dp</item>
        <item name="android:paddingVertical">@dimen/size_20_dp</item>
        <item name="android:textSize">@dimen/size_16_sp</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="background_activity_main_color_style">
        <item name="android:background">@color/background_first_screen</item>
    </style>
    <style name="background_activity_other_color_style">
        <item name="android:background">@color/white</item>
    </style>
    <style name="color_style_search_edit_text">
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:drawableTint">@color/yp_text_gray</item>
    </style>
    <style name="band_name_and_time_style">
        <item name="android:textSize">@dimen/size_12_sp</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginEnd">@dimen/size_8_dp</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="song_name_style">
        <item name="android:textSize">@dimen/size_16_sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="song_album_image_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">@dimen/size_12_dp</item>
        <item name="android:layout_marginTop">@dimen/size_8_dp</item>
        <item name="android:layout_marginBottom">@dimen/size_8_dp</item>
    </style>
    <style name="message_response_result">
        <item name="android:textSize">@dimen/size_20_sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="track_not_found_search">
        <item name="android:layout_marginTop">@dimen/size_86_dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_track_not_found_search_120</item>
    </style>
    <style name="track_no_ethernet_search">
        <item name="android:layout_marginTop">@dimen/size_86_dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_track_no_ethernet_search_120</item>
    </style>
    <style name="button_no_ethernet_reset" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/size_16_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/size_16_dp</item>
    </style>
</resources>